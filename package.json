{
  "name": "express-typescript-boilerplate",
  "version": "1.0.14",
  "description": "An Express boilerplate backend",
  "author": "Edwin Hernandez",
  "repository": "edwinhern/express-typescript-2024",
  "license": "MIT",
  "main": "index.ts",
  "private": true,
  "scripts": {
    "dev": "dotenv -e .env.development tsx watch --clear-screen=false src/index.ts | pino-pretty",
    "build": "yarn build-server",
    "build-server": "tsup",
    "build-client": "cd client && yarn install && yarn build && cd ..",
    "start": "node dist/index.js",
    "clean": "rimraf dist coverage",
    "lint": "biome check src/",
    "lint:fix": "biome check src/ --fix",
    "format": "biome format src/",
    "reset-test-db": "yarn destroy-test-db && ./setup-test-db.sh create",
    "destroy-test-db": "./setup-test-db.sh destroy",
    "test": "dotenv -e .env.test -- vitest run",
    "prepare": "husky",
    "create-migration": "dotenv -e .env.development prisma migrate dev --create",
    "create-migration-production": "dotenv -e .env prisma migrate deploy",
    "migrate": "dotenv -e .env.development prisma migrate deploy && npx prisma generate",
    "seed": "dotenv -e .env.development ts-node --compiler-options '{\"module\":\"CommonJS\"}' prisma/seed.ts",
    "reset-and-seed": "dotenv -e .env.development prisma migrate reset && yarn seed",
    "heroku-postbuild": "yarn build"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.0.0",
    "@phala/dstack-sdk": "^0.1.11",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "envalid": "^8.0.0",
    "ethers": "^5.7.2",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "helmet": "^8.0.0",
    "http-status-codes": "^2.3.0",
    "jose": "^5.9.6",
    "pino": "^9.0.0",
    "pino-http": "^10.0.0",
    "pino-pretty": "^13.0.0",
    "prisma": "^5.20.0",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^10.0.0",
    "viem": "^2.23.15",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^10.0.0",
    "dotenv-cli": "^7.4.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "rimraf": "^6.0.0",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.2",
    "tsx": "^4.7.2",
    "typescript": "^5.4.4",
    "vite-tsconfig-paths": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,json,jsonc}": [
      "biome check --apply --no-errors-on-unmatched"
    ]
  },
  "tsup": {
    "entry": [
      "src",
      "!src/**/__tests__/**",
      "!src/**/**/__tests__/**",
      "!src/**/*.test.*",
      "!src/**/**/*.test.*"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  },
  "packageManager": "yarn@3.6.3"
}
